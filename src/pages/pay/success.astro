---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Paiment effectué" />
<script>
	import Swal from 'sweetalert2';

	Swal.fire({
		title: 'Paiment',
		text: 'Paiment effectué avec succès',
		icon: 'success',
		confirmButtonText: 'Ok',
		heightAuto: false,
	}).then((result) => {
		if (result.isConfirmed) {
			window.location.href = '/basket';
		}
	});
</script>
